t		Sub Open()		  me.text = prefs.stringusername		  app.memusername = prefs.stringusername		End Sub	#tag EndEvent#tag EndEvents#tag Events TextField2	#tag Event		Sub Open()		  me.text = DecodeBase64(stringpassword)		  app.mempassword = me.text		End Sub	#tag EndEvent#tag EndEvents#tag Events CheckBox1	#tag Event		Sub Open()		  me.value = booleanrememberpassword		End Sub	#tag EndEvent	#tag Event		Sub Action()		  If checkbox1.value = true then		    Autologin.enabled = true		  else		    Autologin.enabled = false		    Autologin.value = false		  end if		End Sub	#tag EndEvent#tag EndEvents#tag Events PushButton1	#tag Event		Sub Action()		  ProgressWheel1.visible = true		  pushbutton1.enabled = false		  Loginstatus.visible = true		  Loginstatus.text = "Signing in…"		  If TextField1.text = ""  then		    // no username error		    self.errboxshow("MAL Client OS X was unable to log you in since you didn't enter a username.","Enter a valid username or password and try logging in again")		    ProgressWheel1.visible = false		    Loginstatus.text = "Fail: Check Username/Password…"		    pushbutton1.enabled = true		  else		    If Textfield2.text="" then		      // no password error		      self.errboxshow("MAL Client OS X was unable to log you in since you didn't enter a password.","Enter a valid password and try logging in again. ")		      ProgressWheel1.visible = false		      Loginstatus.text = "Fail: Check Username/Password…"		      pushbutton1.enabled = true		    else		      // using API to check credentials		      Dim socket1 as New HTTPSocket		      dim data as string		      socket1.yield=true		      app.loginenc = EncodeBase64(TextField1.text + ":" + TextField2.text)		      socket1.setrequestheader "Authorization","Basic " + app.loginenc		      data = socket1.Get("http://mal-api.com/account/verify_credentials",10)		      If socket1.httpstatuscode = 200 then		        // login is a success		        // Store Password and Username		        app.memusername = TextField1.text		        app.mempassword = TextField2.text		        Prefs.StringUsername = app.memusername		        // Remember Password Setting		        Prefs.BooleanRememberPassword = checkbox1.value		        Prefs.booleanautologin= autologin.value		        Window1.show		        Window2.close		        //Elseif  socket1.httpstatuscode =		      Elseif socket1.httpstatuscode = 401 then		        // if login fails		        self.errboxshow("MAL Client OS X was unable to log you in since you don't have the correct Username and/or Password.","Check your username and password and try logging in again. If you recently changed your password, enter your new password and try logging in.")		        ProgressWheel1.visible = false		        Loginstatus.text = "Error: Incorrect Password or Username…"		        app.loginenc = ""		        pushbutton1.enabled = true		      else		        self.errboxshow("MAL Client OS X was unable to log you in since it cannot connect to the server. ", "Check your internet connection and try logging in again.")		        ProgressWheel1.visible = false		        Loginstatus.text = "Error: No Internet Connection…"		        app.loginenc = ""		        pushbutton1.enabled = true		      end if		    end if		  end if		End Sub	#tag EndEvent#tag EndEvents#tag Events PushButton2	#tag Event		Sub Action()		  quit		End Sub	#tag EndEvent#tag EndEvents#tag Events StaticText5	#tag Event		Function MouseDown(X As Integer, Y As Integer) As Boolean		  ShowURL "http://myanimelist.net/register.php"		  		End Function	#tag EndEvent#tag EndEvents#tag Events Autologin	#tag Event		Sub Open()		  me.value = booleanautologin		  		End Sub	#tag EndEvent#tag EndEvents